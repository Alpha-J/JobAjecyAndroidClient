<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_view_background"
    android:layout_margin="5dp"
    android:animateLayoutChanges="true"
    >

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/employee_home_item_h1"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".15"

        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/employee_home_item_h2"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".3"

        />


    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/employee_home_item_h3"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".6"

        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/employee_home_item_h4"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".8"

        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/employee_home_item_h5"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".9"

        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/employee_home_item_v1"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".1"

        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/employee_home_item_v3"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".9"

        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/employee_home_item_v2"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".45"

        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/employee_home_item_v4"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".65"

        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/employee_home_item_v44"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".65"

        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/employee_home_item_v444"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".65"

        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/employee_home_item_v5"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".95"

        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/employee_home_item_v55"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".95"

        />


    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/employee_home_item_v6"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".4"

        />



    <TextView
        android:id="@+id/job_header"
        app:layout_constraintStart_toStartOf="@id/employee_home_item_v1"
        app:layout_constraintEnd_toStartOf="@id/employee_home_item_v5"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:gravity="start|center"
        android:textAllCaps="false"
        android:text="Company name :"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/job_type"
        app:layout_constraintStart_toStartOf="@id/employee_home_item_v1"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/job_header"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        android:text="@string/job_type"
        />

    <TextView
        android:id="@+id/job_type_desc"
        app:layout_constraintStart_toEndOf="@id/job_type"
        app:layout_constraintEnd_toEndOf="@id/employee_home_item_v3"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/job_header"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:maxLines="10"
        />

    <TextView
        android:id="@+id/job_needed_skills"
        app:layout_constraintStart_toStartOf="@id/employee_home_item_v1"

        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/job_type_desc"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:text="@string/required_skills"

        />


    <TextView
        android:id="@+id/job_needed_skills_desc"
        app:layout_constraintStart_toEndOf="@id/job_needed_skills"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="@id/employee_home_item_v3"
        app:layout_constraintTop_toBottomOf="@id/job_type_desc"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:maxLines="10"
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/job_needed_skills_desc"
        app:layout_constraintStart_toStartOf="@id/employee_home_item_v444"
        app:layout_constraintEnd_toStartOf="@id/employee_home_item_v55"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/show_more_job_details"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/show_more_detail_effect"
        android:layout_marginBottom="5dp"

        >

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/more_lines_v1"
            app:layout_constraintGuide_percent=".4"
            />

        <TextView
            android:id="@+id/show_more_job_details_textView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@+id/arrow_in_show_more_detail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/more_details"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="@color/purple_700"
            tools:ignore="SmallSp" />

        <ImageView
            android:id="@+id/arrow_in_show_more_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/more_lines_v1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/ic_arrow_down_sign_to_navigate"
            android:background="@drawable/more_detail_background"
            android:foregroundGravity="center"

             />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/expandable_part"
        app:layout_constraintStart_toStartOf="@id/employee_home_item_v1"
        app:layout_constraintEnd_toStartOf="@id/employee_home_item_v5"
        app:layout_constraintTop_toBottomOf="@id/job_needed_skills_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/skill_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skill_score"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <hyogeun.github.com.colorratingbarlib.ColorRatingBar
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/skill_score"
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:changeable="true"
            app:empty_color="@android:color/white"
            app:progress_color="#00f0f0"

            />

        <TextView
            android:id="@+id/job_desc_header"
            app:layout_constraintTop_toBottomOf="@id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:text="@string/job_description"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/job_description"
            app:layout_constraintTop_toBottomOf="@id/job_desc_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/expandable_part"
        app:layout_constraintStart_toStartOf="@id/employee_home_item_v1"
        app:layout_constraintEnd_toEndOf="@id/employee_home_item_v6"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/apply_for_job"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintHeight_percent=".05"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/show_more_detail_effect"
        android:visibility="gone"
        android:layout_margin="5dp"

        >

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/apply_v1"
            app:layout_constraintGuide_percent=".4"
            />

        <TextView
            android:id="@+id/apply_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@+id/apply_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/apply_job"
            android:gravity="start|center"
            android:textColor="@color/purple_700"
            android:textSize="10sp"
            android:textAlignment="viewStart"
            tools:ignore="SmallSp" />

        <ImageView
            android:id="@+id/apply_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/apply_v1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_check_mark_button"
            android:background="@drawable/more_detail_background"
            android:foregroundGravity="center"
            android:layout_margin="5dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout

        app:layout_constraintTop_toBottomOf="@id/expandable_part"
        app:layout_constraintStart_toStartOf="@id/employee_home_item_v44"
        app:layout_constraintEnd_toEndOf="@id/employee_home_item_v5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/collapse"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintHeight_percent=".05"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/show_more_detail_effect"
        android:layout_margin="5dp"
        android:visibility="gone"
        >

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/c_v1"
            app:layout_constraintGuide_percent=".4"
            />

        <TextView
            android:id="@+id/collapse_txt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@+id/collapse_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/collapse"
            android:gravity="start|center"
            android:textColor="@color/purple_700"
            android:textSize="10sp"
            tools:ignore="SmallSp"
            android:textAlignment="viewStart"/>

        <ImageView
            android:id="@+id/collapse_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/c_v1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_collapse"
            android:background="@drawable/more_detail_background"
            android:foregroundGravity="center"
            android:layout_margin="3dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

</layout>