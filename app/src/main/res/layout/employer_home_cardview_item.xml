<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_view_background"
        android:layout_margin="5dp"
        android:animateLayoutChanges="true"
        >

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/employer_home_item_h1"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".15"

            />

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/employer_home_item_h2"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".3"

            />


        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/employer_home_item_h3"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".6"

            />

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/employer_home_item_h4"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".8"

            />

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/employer_home_item_h5"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".9"

            />
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/employer_home_item_v1"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".1"

            />

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/employer_home_item_v11"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".1"

            />


        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/employer_home_item_v3"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".9"

            />

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/employer_home_item_v2"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".45"

            />

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/employer_home_item_v4"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".65"

            />
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/employer_home_item_v44"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".65"

            />
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/employer_home_item_v444"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".65"

            />

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/employer_home_item_v5"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".95"

            />
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/employer_home_item_v55"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".95"

            />


        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/employer_home_item_v6"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".4"

            />


        <TextView
            android:id="@+id/job_date"
            app:layout_constraintStart_toStartOf="@id/employer_home_item_v1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:gravity="start|center"
            android:textAllCaps="false"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:background="@drawable/date_text_background"
            />


        <TextView
            android:id="@+id/job_header"
            app:layout_constraintStart_toStartOf="@id/employer_home_item_v1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/job_date"
            android:layout_marginTop="10dp"
            android:gravity="start|center"
            android:paddingStart="5dp"
            android:paddingEnd="2dp"
            android:textAllCaps="false"
            android:text="@string/company_name"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:background="@drawable/company_textview_background"
            />

        <TextView
            android:id="@+id/job_type"
            app:layout_constraintStart_toStartOf="@id/employer_home_item_v1"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/job_header"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:text="@string/job_type"
            />

        <TextView
            android:id="@+id/job_type_desc"
            app:layout_constraintStart_toEndOf="@id/job_type"
            app:layout_constraintEnd_toEndOf="@id/employer_home_item_v3"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@id/job_header"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:gravity="start|center"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:maxLines="10"
            />

        <TextView
            android:id="@+id/job_needed_skills"
            app:layout_constraintStart_toStartOf="@id/employer_home_item_v1"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/job_type_desc"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="@string/required_skills"

            />


        <TextView
            android:id="@+id/job_needed_skills_desc"
            app:layout_constraintStart_toEndOf="@id/job_needed_skills"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="@id/employer_home_item_v3"
            app:layout_constraintTop_toBottomOf="@id/job_type_desc"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:maxLines="10"
            android:layout_marginTop="5dp"
            />



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/expandable_part"
            app:layout_constraintStart_toStartOf="@id/employer_home_item_v1"
            app:layout_constraintEnd_toStartOf="@id/employer_home_item_v5"
            app:layout_constraintTop_toBottomOf="@id/job_needed_skills_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            >

            <TextView
                android:id="@+id/skill_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/skill_score"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="start"
                android:textAlignment="textStart"
                />

            <hyogeun.github.com.colorratingbarlib.ColorRatingBar
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/skill_score"
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:changeable="false"
                app:empty_color="@android:color/white"
                app:progress_color="#ffea00"

                />

            <TextView
                android:id="@+id/job_desc_header"
                app:layout_constraintTop_toBottomOf="@id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="5dp"
                android:text="@string/job_description"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textAlignment="textStart"
                android:gravity="start"
                />

            <TextView
                android:id="@+id/job_description"
                app:layout_constraintTop_toBottomOf="@id/job_desc_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@id/expandable_part"
            app:layout_constraintStart_toStartOf="@id/employer_home_item_v11"
            app:layout_constraintEnd_toEndOf="@id/employer_home_item_v6"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/delete_job"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:layout_constraintHeight_percent=".05"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/show_more_detail_effect"

            android:layout_margin="5dp"

            >

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/apply_v1"
                app:layout_constraintGuide_percent=".4"
                />

            <TextView
                android:id="@+id/delete_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@+id/delete_job_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/delete_job"
                android:gravity="start|center"
                android:textColor="@color/purple_700"
                android:textSize="10sp"
                android:textAlignment="viewStart"
                tools:ignore="SmallSp" />

            <ImageView
                android:id="@+id/delete_job_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/apply_v1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_cancel"
                android:background="@drawable/more_detail_background"
                android:foregroundGravity="center"
                android:layout_margin="5dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>